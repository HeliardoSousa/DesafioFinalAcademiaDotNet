@model DesafioFinal.Models.Artigo

@{
    ViewData["Title"] = "Criação de novo artigo";
}

<h1>Criação de artigo</h1>

<h4>Artigo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Corpo" class="control-label"></label>
                <input asp-for="Corpo" class="form-control" />
                <span asp-validation-for="Corpo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" class ="form-control" asp-items="ViewBag.IdCategoria"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar artigo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Voltar para os artigos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
